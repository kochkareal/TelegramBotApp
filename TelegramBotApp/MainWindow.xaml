<!-- MainWindow.xaml -->
<Window x:Class="TelegramBotApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="500" Width="400">
    <Grid>
        <Label Content="Введите ХЭШ-ключ:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,120" FontFamily="Arial" FontWeight="Bold" FontSize="24"/>
        <Label Content="Получить его можно у @BotFather" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,60" FontFamily="Arial" FontSize="14" Foreground="#FF373737"/>
        <TextBox Name="HashKeyTextBox" HorizontalAlignment="Center" Height="23" Margin="0,0,0,10" VerticalAlignment="Center" Width="360"/>
        <Button x:Name="EnterButton" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,80,0,0" Width="100" Click="OnLoginButtonClick" FontSize="24" FontWeight="Bold"/>
        <ProgressBar Name="LoadingProgressBar" IsIndeterminate="True" Visibility="Collapsed" Width="300" Height="20" VerticalAlignment="Bottom" Margin="0,0,0,30" HorizontalAlignment="Center"/>
    </Grid>
</Window>

